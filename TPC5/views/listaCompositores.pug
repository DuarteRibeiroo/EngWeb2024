extends layout

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1= title
    .w3-container 
      table.w3-table-all
        thead
          tr
            th Id
            th Nome 
            th Periodo
        tbody
          each compositor in lista
            tr
              td
                a(href= '/compositores/' + compositor.id)= compositor.id
              td= compositor.nome
              td= compositor.periodo
              td
                a.w3-button.w3-blue(href='/compositores/edit/' + compositor.id) Editar 
                a.w3-button.w3-red(href='/compositores/delete/' + compositor.id) Apagar
    footer.w3-footer.w3-pink
      address Gerado por EngWeb2024 em #{data}