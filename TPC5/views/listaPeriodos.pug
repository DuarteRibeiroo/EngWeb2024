      h1= title
    .w3-container 
      table.w3-table-all
        thead
          tr
            th Id
            th Per√≠odo
        tbody
          each periodo in lista
            tr
              td
                a(href= '/periodos/' + periodo.id)= periodo.id
              td= periodo.nome
              td= periodo.periodo
